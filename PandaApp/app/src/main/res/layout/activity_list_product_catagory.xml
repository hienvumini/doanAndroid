<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListProductCatagoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:orientation="vertical"
        android:background="@color/color_brown">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_15p">
        <ImageView

            android:id="@+id/catagory_back"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_marginLeft="@dimen/dimen_15p"
            android:layout_marginRight="@dimen/dimen_10dp"/>
        <TextView
            android:id="@+id/catagory_tenSP"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_40dp"
            android:text="Áo thun nam"
            android:textSize="@dimen/font_20sp"
            android:textColor="@color/color_black"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dimen_10dp"
            android:background="@color/color_white"/>
        <ImageView
            android:id="@+id/catagory_cart"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cart"
            android:layout_marginLeft="@dimen/dimen_25dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_5dp">
            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/catagory_giaMin"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:text="Giá thấp nhất"
                    android:textSize="@dimen/font_20sp"
                    android:textColor="@color/color_pink2"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/catagory_dropDown"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/drop"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                    <ImageView
                        android:id="@+id/catagory_displayType"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/display_type"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dimen_15p"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:padding="@dimen/dimen_5dp"></GridView>

</LinearLayout>