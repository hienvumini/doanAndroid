<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ShopProfileActivity">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/color_pink2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_back_black"
                android:layout_gravity="start"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/back_black"
                android:layout_marginTop="@dimen/dimen_5dp"/>
            <TextView
                android:id="@+id/shop_myaccount"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="@dimen/font_20sp"
                android:text="Tài khoản của tôi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_toRightOf="@+id/img_back_black"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_5dp" />

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="match_parent"
                android:src="@drawable/detail_more"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/shop_liner_tinhtrang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_135dp"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/shop_donban"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="2"
            android:text="Đơn bán"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_18sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dimen_10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="9">
            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shop_img_giaohang"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:src="@drawable/giaohang"
                    android:layout_marginTop="@dimen/dimen_15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang giao"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shop_img_nhanhang"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:src="@drawable/nhanhang"
                    android:layout_marginTop="@dimen/dimen_15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã nhận"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shop_img_dahuy"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:src="@drawable/dahuy"
                    android:layout_marginTop="@dimen/dimen_15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã hủy"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shop_liner_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_135dp"
        android:orientation="vertical"
        android:layout_below="@+id/shop_liner_tinhtrang"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/dimen_15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_15dp">
            <TextView
                android:id="@+id/shop_addProduct"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:text="+"
                android:textSize="@dimen/font_24sp"
                android:textColor="@color/color_pink2"
                android:gravity="center"
                android:background="@drawable/custom_circle_pink"
                android:layout_marginLeft="@dimen/dimen_15dp" />
            <TextView
                android:id="@+id/shop_add_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thêm sản phẩm mới"
                android:textSize="@dimen/font_18sp"
                android:textColor="@color/color_black"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/dimen_15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_35dp">
            <ImageView
                android:id="@+id/shop_img_revenue"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:src="@drawable/revenue"
                android:background="@drawable/custom_circle_pink"
                android:layout_marginLeft="@dimen/dimen_15dp"/>
            <TextView
                android:id="@+id/shop_txt_revenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Doanh thu"
                android:textSize="@dimen/font_18sp"
                android:textColor="@color/color_black"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/dimen_15dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/shop_liner_manager"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/dimen_5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:text="Sản phẩm của tôi"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="@dimen/font_16sp"
            android:gravity="left|center"
            android:layout_marginLeft="@dimen/dimen_15dp"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:padding="@dimen/dimen_10dp">
        </GridView>
    </LinearLayout>
</RelativeLayout>