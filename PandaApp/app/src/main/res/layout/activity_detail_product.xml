<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_brown">

    <LinearLayout
        android:id="@+id/detail_liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/detail_product_footer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="6">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/detail_img" />
            <ImageView
                android:id="@+id/detail_product_back"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/custom_circle"
                android:src="@drawable/back_black"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginLeft="@dimen/dimen_15dp"/>
            <ImageView
                android:id="@+id/detail_product_cart"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/custom_circle"
                android:src="@drawable/cart"
                android:layout_toLeftOf="@+id/detail_product_more"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:padding="@dimen/dimen_2dp" />
            <ImageView
                android:id="@+id/detail_product_more"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/custom_circle"
                android:src="@drawable/detail_more"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:padding="@dimen/dimen_5dp"/>
            <LinearLayout
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/botron_10dp"
                android:layout_marginBottom="@dimen/dimen_35dp"
                android:layout_marginRight="@dimen/dimen_15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/font_16sp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dimen_5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="@dimen/font_16sp"
                    android:gravity="center|left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="@dimen/font_16sp"
                    android:gravity="center|left" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="1.5"
            android:background="@color/color_brown"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:text="Áo sơ mi nữ cổ đen"
                android:textColor="@color/color_black"
                android:gravity="center|left"
                android:textSize="@dimen/font_18sp"
                android:paddingLeft="@dimen/dimen_10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="120.000"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/color_pink2"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="đ"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/color_pink2"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Đã bán: "
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/color_black"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/color_black"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_15dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:background="@color/color_white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết sản phẩm"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_18sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thiết kế"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_16sp"
                android:layout_marginLeft="@dimen/dimen_20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chất liệu"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_16sp"
                android:layout_marginLeft="@dimen/dimen_20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểu dáng"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_16sp"
                android:layout_marginLeft="@dimen/dimen_20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phong cách"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_16sp"
                android:layout_marginLeft="@dimen/dimen_20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đi làm, ..."
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_16sp"
                android:layout_marginLeft="@dimen/dimen_20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_product_footer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dimen_2dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:background="@color/color_white"
        android:layout_marginBottom="@dimen/dimen_5dp">
        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_5dp">
            <ImageView
                android:id="@+id/detail_product_stall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:src="@drawable/stall" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gian hàng"
                android:textColor="@color/color_black"
                android:gravity="center"/>
        </LinearLayout>

           <Button
               android:id="@+id/detail_product_btn_mua"
               android:layout_width="@dimen/dimen_0dp"
               android:layout_height="match_parent"
               android:layout_weight="3"
               android:text="Mua ngay"
               android:textColor="@color/color_white"
               android:background="@drawable/botron_button_pink"
               android:layout_marginLeft="@dimen/dimen_25dp"/>
        <Button
            android:id="@+id/detail_product_btn_them"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/color_white"
            android:background="@drawable/botron_button_pink"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_5dp"/>
    </LinearLayout>

</RelativeLayout>